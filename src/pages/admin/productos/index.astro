/* fetch products */
let products: Product[] | null = []
let page = 1
let from = 0
let to = 4
let items_per_pages = 4

try {
	const { data, error } = await supabase.from('products').select()

	if (error) console.log(error)
	products = data
} catch (error) {
	return Response.json(
		{
			message: error
		},
		{
			status: 500
		}
	)
