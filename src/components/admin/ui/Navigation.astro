---
import SideMenu from '@/components/layout/SideMenu'
import SideMenuOptions from '@/components/layout/SideMenuOptions'
import {
	BanknotesIcon,
	CurrencyDollarIcon,
	DevicePhoneMobileIcon,
	PresentationChartBarIcon,
	ShoppingBagIcon,
	WalletIcon
} from '@heroicons/react/20/solid'

// import AdminSideMenu from "./AdminSideMenu.astro";

type Props = {
	title: string | undefined
}

const { title } = Astro.props
---

<nav
	class='flex py-4 px-5 justify-between items-center border-b-[1px] border-mediumGray'
>
	<div class='flex gap-x-1 items-center'>
		<SideMenu client:idle>
			<ul role='list' class='-my-6 space-y-8'>
				<SideMenuOptions
					name='Dashboard'
					link='/admin/dashboard'
					otherStyles='text-2xl'
				>
					<PresentationChartBarIcon className='flex-shrink-0 w-6 h-6' />
				</SideMenuOptions>
				<SideMenuOptions
					name='Productos'
					link='/admin/productos'
					otherStyles='text-2xl'
				>
					<ShoppingBagIcon className='flex-shrink-0 w-6 h-6' />
				</SideMenuOptions>
				<SideMenuOptions name='Ingresos' link='./ingresos' otherStyles='text-2xl'>
					<BanknotesIcon className='flex-shrink-0 w-6 h-6' />
				</SideMenuOptions>
				<SideMenuOptions name='Gastos' link='./gastos' otherStyles='text-2xl'>
					<CurrencyDollarIcon className='flex-shrink-0 w-6 h-6' />
				</SideMenuOptions>
				{
					/* <SideMenuOptions name='Iniciar sesiÃ³n' link='/login'>
					<Login />
				</SideMenuOptions> */
				}
			</ul>
		</SideMenu>
		<span class='text-xl font-medium'>{title}</span>
	</div>
	<div class='flex items-center gap-x-2'>
		<span class='text-grayText'>Jose G Rojas</span>
		<img
			class='w-10 h-10 p-1 rounded-full ring-1 ring-mediumGray'
			src='https://wac-cdn.atlassian.com/dam/jcr:ba03a215-2f45-40f5-8540-b2015223c918/Max-R_Headshot%20(1).jpg?cdnVersion=1221'
			alt='Bordered avatar'
		/>
	</div>
</nav>
